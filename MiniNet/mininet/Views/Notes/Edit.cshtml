@model NoteModel
@{
    var note = (NoteModel)ViewData["note"];
}

<p id='h-note-content' hidden> @note.Content </p>
<div class="text-center">
    <form class="form-horizontal" asp-controller="Notes" asp-action="Edit" method="POST">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <div>
                <input asp-for="Title" value=@note.Title />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <div>
                <textarea id='note-content' asp-for="Content"> </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </form>
</div>

<script>
    window.onload = () => {
        var note = document.getElementById('note-content')
        var hNote = document.getElementById('h-note-content')
        note.innerHTML = hNote.innerHTML;
    }
</script>