@{
    var profile = (ProfileModel) ViewData["profile"];
}

<div class="row py-5 px-4">
    <div class="col-md-5 mx-auto">
        <!-- Profile widget -->
        <div class="shadow rounded overflow-hidden">
            <div class="px-4 pt-0 pb-4 cover">
                <div class="media align-items-end profile-head">
                    <div class="profile mr-3"><img src="https://bit.ly/3iN2SQW" alt="..." width="130" class="rounded mb-2 img-thumbnail">
                    <a asp-controller="Profiles" asp-action="Edit" asp-route-id =@profile.Id class="btn btn-outline-dark btn-sm btn-block">Edit profile</a>
                    </div>
                    <div class="media-body mb-5 text-white">
                        <h4 class="mt-0 mb-0 text-dark">@profile.Name</h4>
                    </div>
                </div>
        </div>
    </div>
</div>