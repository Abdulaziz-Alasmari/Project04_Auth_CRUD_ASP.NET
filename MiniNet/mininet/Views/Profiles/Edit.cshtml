@model ProfileModel
@{
    var profile = (ProfileModel)ViewData["profile"];
}

<div class="text-center">
    <form class="form-horizontal" asp-controller="Profiles" asp-action="Edit" method="POST">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <div>
                <input asp-for="Name" value=@profile.Name />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </form>
</div>